<h1>Add New Classification</h1>

  <% if (message) { %>
    <div class="flash"><%= message %></div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <div class="error">
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form action="/inv/add-classification" method="post" class="form-group">
    <label for="classification_name">Classification Name</label>
    <input type="text" id="classification_name" name="classification_name" required pattern="^[A-Za-z0-9]+$" title="No spaces or special characters">

    <button type="submit" class="btn">Add Classification</button>
  </form>