<div class="login-container">
  <h1 class="login-title"><%= title %></h1>

<% if (typeof errors !== "undefined" && errors.length > 0) { %>
  <ul class="form-errors">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
<% if (messages && messages.length > 0) { %>
<ul><li class="flash"><%= messages[0] %></li></ul>
<% } %>


  <form id="loginForm" method="post" action="/account/login" class="login-form">
  <label for="account_email">Email</label>
  <input 
    type="email" 
    id="account_email" 
    name="account_email" 
    value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
    required 
    placeholder="Enter a valid email address"
  >

  <label for="account_password">Password</label>
  <div class="password-instructions">
    Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1 special character.
  </div>
  <input 
    type="password" 
    id="account_password" 
    name="account_password" 
    required 
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    title="At least 12 characters, with at least 1 number, 1 capital letter, and 1 special character"
  >

  <button type="submit">Login</button>
</form>
  <p class="login-link">
    Don't have an account? <a href="/account/register">Register</a>
  </p>
</div>

